<div class="container page-top-space">
  <%= render 'shared/hr_header' %>
  <%= render 'shared/hr_navigation' %>
  <div class="row">
    <div class="column">
      <%= simple_form_for(@company_policy) do |f| %>
        <h2>Train policy (one-way ticket)</h2>
        <div class="form-inputs range-slider">
          <span id="rs-bullet-train" class="rs-label">0</span>
          <%= f.input :max_price_train, as: :range, label: false, input_html: { min: "0", max: "500", value: @company_policy.max_price_train }, class:'rs-range' %>
        </div>
        <div class="box-minmax">
          <span>0</span><span>500 €</span>
        </div>

        <h2>Hotel policy (per night)</h2>
        <div class="form-inputs range-slider">
          <span id="rs-bullet-hotel" class="rs-label">0</span>
          <%= f.input :max_price_hotel, as: :range, label: false, input_html: { min: "0", max: "500", value: @company_policy.max_price_hotel }, class:'rs-range' %>
        </div>
        <div class="box-minmax">
          <span>0</span><span>500 €</span>
        </div>

        <h2>Car rental policy (per night)</h2>
        <div class="form-inputs range-slider">
          <span id="rs-bullet-car" class="rs-label">0</span>
          <%= f.input :max_price_car, as: :range, label: false, input_html: { min: "0", max: "300", value: @company_policy.max_price_car }, class:'rs-range' %>
        </div>
        <div class="box-minmax">
          <span>0</span><span>300 €</span>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Update", class: 'btn-custom' %>
        </div>
      <% end %>

    </div>
  </div>
</div>
