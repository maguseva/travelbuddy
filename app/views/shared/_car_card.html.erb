<div class="billboard-card">
  <div class="card card-2">
    <div class="card-content">
      <div class="misc">
         <%= image_tag @package.car.picture %>
        <span>
          <abbr><%= @package.car.name %></abbr>
            <small>
              <i><%= @package.car.car_category %></i>
              <p><%= @package.start_date.strftime('%b %d, %Y') %> – <%= @package.end_date.strftime('%b %d, %Y') %></p>
            </small>
          </span>
        </div>
      </div>
      <div class="card-provider">
        <%= image_tag @package.car.photo %>
        <small>
          <%= @package.car.address.split(",")[0] %>
          <br>
          <%= @package.car.address.split(",")[1] %>
        </small>
      </div>
      <div class="card-price">
        <p><%=@package.car.price %>€ / Day</p>
      </div>
    </div>
</div>
