<!-- _form.html.erb -->
<%= simple_form_for [@packages] do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :dep_city, as: :string, required: false, :label => "From" %>
    <%= f.input :arr_city, as: :string, required: false, :label => "To" %>
    <%= f.input :start_date, as: :string, required: false, input_html: {class: "datepicker"} %>
    <%= f.input :end_date, as: :string, required: false, input_html: {class: "datepicker", id: "end_date"} %>
  </div>

  <div class="form-actions">
    <%= f.submit "Refresh", class: "btn" %>
  </div>
<% end %>
