<h1 id="list-page">The best packages</h1>

<div class="container">
  <div class="row">
    <% @packages.each do |package| %>
      <div class="col-md-6 col-lg-4" id="planet-card">
        <%= link_to package_path(package) do %>
          <div class="package-card" >
            <div class="train-card">
              <p><%= package.train_from.train_number %></p>
              <p><%= package.train_from.price %> euro</p>
              <p><%= package.train_to.train_number %></p>
              <p><%= package.train_to.price %> euro</p>
            </div>
            <div class="hotel-card">
              <p><%= package.hotel.name %></p>
              <p><%= package.hotel.price %> euro</p>
            </div>
            <div class="car-card">
              <p><%= package.car.name %></p>
              <p><%= package.car.price %> €</p>
            </div>
            <div class="total-price-card">
              <p><%= package.price %> €</p>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
