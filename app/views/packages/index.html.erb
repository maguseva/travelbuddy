<div id="packages-index-animation">
  <div id="index-animation">
    <div class="train">
      <div class="windows"></div>
      <div class="lights"></div>
    </div>
    <div class="rails">
      <div class="ties"></div>
      <div class="ties"></div>
      <div class="ties"></div>
    </div>
  </div>
  <p id="animation-one" class="d-none text-center">Company travel policy applied...</p>
  <p id="animation-two" class="d-none text-center">Curated travel packages generated...</p>
</div>



<div class="container d-none" id="packages-index">
  <div class="search-index page-top-space">
    <%= render 'shared/search_form', locals: { cl: @class } %>
  </div>
    <br>

  <% if @packages.empty? %>
    <p class="text-center">Sorry, we couldn't find any packages for your search.</p>

  <% else %>

    <h2 class="header-left uppcase-font my-1">Curated Travel Packages</h2>
      <% @packages.each_with_index do |package, index| %>

        <div id="packages">
          <div class="cards-row index-border">

            <div class="card card-2 index-item">
              <div class="card-content">
                <div class="schedules">
                  <ul>
                    <li class="tab active">Inward</li>
                    <li class="tab">Outward</li>
                  </ul>
                  <div class="schedule">
                    <span>
                      <abbr><%= package.train_from.dep_city %> – <%=package.train_from.arr_city%></abbr>
                      <small>
                        <i><%= package.train_from.category %></i>
                        <p><%= package.start_date.strftime('%b %d, %Y') %>, <%= package.train_from.dep_time %> – <%= package.train_from.arr_time %></p>
                      </small>
                    </span>
                  </div>
                  <div class="schedule hidden">
                    <span>
                      <abbr><%= package.train_to.dep_city %> – <%=package.train_to.arr_city%></abbr>
                      <small>
                        <i><%= package.train_from.category %></i>
                        <p><%= package.end_date.strftime('%b %d, %Y') %>, <%= package.train_to.dep_time %> – <%= package.train_to.arr_time %></p>
                      </small>
                    </span>
                  </div>
                </div>
              </div>
              <div class="card-provider">
                <%= image_tag package.train_from.photo %>
                <small>
                  Deutsche Bahn
                  <br>
                  <%= package.train_from.train_number %>
                </small>
              </div>
              <div class="card-price">
                <p><%= package.train_price %> € / Trip</p>
              </div>
            </div>

            <div class="card card-2 index-item">
              <div class="card-content">
                <div class="misc">
                  <%= image_tag package.hotel.photo %>
                  <span>
                    <abbr><%= package.hotel.name %></abbr>
                    <small>
                      <i><% package.hotel.stars.times do %>
                        ⭐️
                        <% end %></i>
                      <p><%= package.start_date.strftime('%b %d, %Y') %> – <%= package.end_date.strftime('%b %d, %Y') %></p>
                    </small>
                  </span>
                </div>
              </div>
              <div class="card-provider">
                <%= image_tag package.hotel.logo %>
                <small>
                  <%= package.hotel.address.split(",")[0] %>
                  <br>
                  <%= package.hotel.address.split(",")[1] %>
                </small>
              </div>
              <div class="card-price">
                <p><%=package.hotel.price %> € / Night</p>
              </div>
            </div>

            <div class="card card-2 index-item">
              <div class="card-content">
                <div class="misc">
                  <%= image_tag package.car.picture %>
                  <span>
                    <abbr><%= package.car.name %></abbr>
                      <small>
                        <i><%= package.car.car_category %></i>
                        <p><%= package.start_date.strftime('%b %d, %Y') %> – <%= package.end_date.strftime('%b %d, %Y') %></p>
                      </small>
                  </span>
                </div>
              </div>
              <div class="card-provider">
                   <%= image_tag package.car.photo %>
                <small>
                  <%= package.car.address.split(",")[0] %>
                  <br>
                  <%= package.car.address.split(",")[1] %>
                </small>
              </div>
              <div class="card-price">
                <p><%=package.car.price %> € / Day</p>
              </div>
            </div>

            <div class="total-price-item">
              <% if index == 0 %>
                <%= image_tag "tag.png", alt: "price-tag", class: "cheap-icon blink" %>
                <p><%= package.price %> €</p>
                <%= link_to 'Select', package_path(package), class: "btn-custom-green" %>
              <% else %>
                <p><%= package.price %> €</p>
                <%= link_to 'Select', package_path(package), class: "btn-custom-green" %>
              <% end %>
            </div>

          </div>
        </div>
      <% end %>

  <% end %>
</div>

