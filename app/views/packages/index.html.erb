<div class="container page-top-space">
  <div class="search-index">
    <%= render 'shared/search_form', locals: { cl: @class } %>
  </div>
    <br>
</div>
  <% if @packages.empty? %>
    <p class="text-center">Sorry, we couldn't find any packages for your search.</p>

  <% else %>
    <h1 class="text-center">The best packages</h1>

      <% @packages.each do |package| %>
        <div id="packages">
          <div class="cards-row index-border">

            <div class="card card-2 index-item">
              <div class="card-content">
                <div class="schedules">
                  <ul>
                    <li class="tab active">Inward</li>
                    <li class="tab">Outward</li>
                  </ul>
                  <div class="schedule">
                    <span>
                      <abbr><%= package.train_from.dep_city %> – <%=package.train_from.arr_city%></abbr>
                      <small>
                        <i><%= package.train_from.category %></i>
                        <p><%= package.start_date.strftime('%b %d, %Y') %>, <%= package.train_from.dep_time %> – <%= package.train_from.arr_time %></p>
                      </small>
                    </span>
                  </div>
                  <div class="schedule hidden">
                    <span>
                      <abbr><%= package.train_to.dep_city %> – <%=package.train_to.arr_city%></abbr>
                      <small>
                        <i><%= package.train_from.category %></i>
                        <p><%= package.end_date.strftime('%b %d, %Y') %>, <%= package.train_to.dep_time %> – <%= package.train_to.arr_time %></p>
                      </small>
                    </span>
                  </div>
                </div>
              </div>
              <div class="card-provider">
                <img src="" alt="logo">
                <small>
                  Deutsche Bahn
                  <br>
                  <%= package.train_from.train_number %>
                </small>
              </div>
              <div class="card-price">
                <p><%= package.train_price %>€ per Trip</p>
              </div>
            </div>

            <div class="card card-2 index-item">
              <div class="card-content">
                <div class="misc">
                  <%= image_tag package.hotel.photo %>
                  <span>
                    <abbr><%= package.hotel.name %></abbr>
                    <small>
                      <i><% package.hotel.stars.times do %>
                        ⭐️
                        <% end %></i>
                      <p><%= package.start_date.strftime('%b %d, %Y') %> – <%= package.end_date.strftime('%b %d, %Y') %></p>
                    </small>
                  </span>
                </div>
              </div>
              <div class="card-provider">
                <img src="" alt="logo">
                <small>
                  <%= package.hotel.address.split(",")[0] %>
                  <br>
                  <%= package.hotel.address.split(",")[1] %>
                </small>
              </div>
              <div class="card-price">
                <p><%=package.hotel.price %>€ per Night</p>
              </div>
            </div>

            <div class="card card-2 index-item">
              <div class="card-content">
                <div class="misc">
                  <%= image_tag package.car.photo %>
                  <span>
                    <abbr><%= package.car.name %></abbr>
                      <small>
                        <i><%= package.car.car_category %></i>
                        <p><%= package.start_date.strftime('%b %d, %Y') %> – <%= package.end_date.strftime('%b %d, %Y') %></p>
                      </small>
                  </span>
                </div>
              </div>
              <div class="card-provider">
                <img src="" alt="logo">
                <small>
                  <%= package.car.address.split(",")[0] %>
                  <br>
                  <%= package.car.address.split(",")[1] %>
                </small>
              </div>
              <div class="card-price">
                <p><%=package.car.price %>€ per Day</p>
              </div>
            </div>

            <div class="total-price-item">
              <p><%= package.price %> €</p>
              <%= link_to 'Select', package_path(package), class: "btn-custom" %>
            </div>
          </div>
        </div>
    <% end %>
  <% end %>

