<div class="container-fluid">
  <div class="row">
    <%= render 'shared/map'%>
  </div>
  <br>

  <div class="container">
    <div class="billboard">
      <div class="billboard-details">
        <div class="billboard-details-city">
          <span><%=@package.train_from.dep_city%></span>
          <i><%= @package.start_date.strftime('%b %d, %Y') %></i>
        </div>
        <div class="billboard-details-city">
          <span><%=@package.train_from.arr_city%></span>
          <i><%= @package.end_date.strftime('%b %d, %Y') %></i>
        </div>
      </div>

      <div class="billboard-vanities">
        <div class="billboard-vanity">
          <span> <%= (@package.end_date - @package.start_date).to_i %></span>
          <i>Night(s)</i>
        </div>
        <div class="billboard-vanity">
          <span> <%= @package.hotel.stars %></span>
          <i>Stars Hotel</i>
        </div>
         <div class="billboard-vanity">
          <span>1</span>
          <i>Rental Car</i>
        </div>
      </div>
    </div>

  </div>
</div>
<div class="cards-row">
  <%= render 'shared/train_card' %>
  <%= render 'shared/hotel_card' %>
  <%= render 'shared/car_card' %>

  <%= simple_form_for [@package, @booking] do |f| %>
        <%= f.submit "Book your trip  |  #{@package.price} â‚¬",
            class: "btn-custom-green"
          %>
      <% end %>
</div>

<div class="">
  <div class="">
    <div class="carousel-flick">

      <h1><%= @package.hotel.name %></h1>
        <div class="carousel">
          <div class="carousel-cell">
              <%= image_tag @package.hotel.photo, width: "750px" %>
          </div>
          <div class="carousel-cell">
            <%= image_tag @package.hotel.photo2 , width: "750px"%>
          </div>
          <div class="carousel-cell">
            <%= image_tag @package.hotel.photo3 , width: "750px"%>
          </div>
          <div class="carousel-cell">
            <%= image_tag @package.hotel.photo4 , width: "750px"%>
          </div>
          <div class="carousel-cell">
            <%= image_tag @package.hotel.photo5 , width: "750px"%>
          </div>
       </div>



    </div>
  </div>
</div>




