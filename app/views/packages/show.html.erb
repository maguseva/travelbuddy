
<div class="container col-sm-6 col-md-8 col-lg-10" >
  <div class="row">
    <div class="package-header-box col-6">
      <div class="package-header" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= @package.hotel.photo %>)">
        Hotel Photo
      </div>
    </div>
    <div class="package-header-box col-6">
      <div class="package-header" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
        Map
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-12" id="trip-summary">
    <br>
    </div>
  </div>
  <div class="row">
    <div class="col-8" id="package-frame">
      <div class="package-item">
         <%= image_tag @package.train_from.photo %>
<!--         <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg"/>
 -->      <div class="package-item-infos">
            <h2>Train: <%= @package.train_from.carrier_name%></h2>
              <p><strong>Outward trip</strong></p>
              <p><%=@package.train_from.category%></p>
              <p>Train Number: <%=@package.train_to.train_number%></p>
              <p><%=@package.train_from.dep_city%> <%= @package.start_date.strftime('%b %d, %Y') %>, <%= @package.train_from.dep_time %></p>
              <p><%=@package.train_from.arr_city%> <%= @package.end_date.strftime('%b %d, %Y') %>, <%= @package.train_from.arr_time %></p>
              <p><strong>Return trip</strong></p>
              <p><%=@package.train_to.category%></p>
              <p>Train Number: <%=@package.train_from.train_number%></p>
              <p><%=@package.train_to.dep_city%> <%= @package.start_date.strftime('%b %d, %Y') %>, <%= @package.train_to.dep_time %> </p>
              <p><%=@package.train_to.arr_city%> <%= @package.end_date.strftime('%b %d, %Y') %>, <%= @package.train_to.arr_time %></p>
            <h5 align="right"><%=@package.train_from.price + @package.train_to.price%>€</h5>
        </div>
      </div>
      <div class="package-item">
         <%= image_tag @package.hotel.photo %>
        <div class="package-item-infos">
          <h2><%= @package.hotel.name%> <%@package.hotel.stars.times do%>
             ⭐️
          <% end %></h2>
          <p>From:  <%=@package.start_date.strftime('%b %d, %Y') %> To:  <%=@package.end_date.strftime('%b %d, %Y') %></p>
          <p><%=@package.hotel.address %></p>
          <h5 align="right"><%=@package.hotel.price%>€</h5>
        </div>
      </div>
      <div class="package-item">
        <%= image_tag @package.car.photo %>
        <div class="package-item-infos">
          <h2><%= @package.car.name%></h2>
            <p><%=@package.car.car_category%></p>
            <p><%=@package.car.company_name%></p>
            <p><%=@package.start_date.strftime('%b %d, %Y')%> <%=@package.end_date.strftime('%b %d, %Y') %></p>
            <p><%=@package.car.address %></p>
          <h5 align="right"><%=@package.car.price%>€</h5>
        </div>
      </div>
    </div>
    <div class="col-4" id="booking-form">
      <h2> <%=@package.dep_city%> - <%=@package.arr_city%> </h2>
        <p>Start Date:   <%=@package.start_date.strftime('%b %d, %Y') %>   End Date:<%=@package.end_date.strftime('%b %d, %Y') %></p>
        <p>From: <%=@package.dep_city%> To: <%=@package.arr_city%> </p>
        <p>Total Price: <%=@package.price%> €</p>
        <%= simple_form_for [@package, @booking] do |f| %>
        <%= f.submit "Book your trip", class: "btn btn-danger btn-block" %>
        <% end %>
    </div>
  </div>
</div>
