
<div class="container-fluid">
  <div class="row">
    <%= render 'shared/map'%>
  </div>
</div>

<div class="container">
  <div class="billboard">
    <div class="billboard-details">
      <div class="billboard-details-city">
        <span><%=@package.train_from.dep_city%></span>
        <i><%= @package.start_date.strftime('%b %d, %Y') %></i>
      </div>
      <div class="billboard-details-city">
        <span><%=@package.train_from.arr_city%></span>
        <i><%= @package.end_date.strftime('%b %d, %Y') %></i>
      </div>
    </div>

    <div class="billboard-vanities">
      <div class="billboard-vanity">
        <span>2</span>
        <i>night</i>
      </div>
      <div class="billboard-vanity">
        <span>1</span>
        <i>rental car</i>
      </div>
      <div class="billboard-vanity">
        <span>5</span>
        <i>stars hostel</i>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-4">
      <div class="card-product">
        <%= image_tag @package.train_from.photo %>
        <div class="card-product-infos">
          <h2><strong>Outward trip</strong></h2>
            <p><%=@package.train_from.dep_city%> <%= @package.start_date.strftime('%b %d, %Y') %>, <%= @package.train_from.dep_time %></p>
            <p><%=@package.train_from.arr_city%> <%= @package.end_date.strftime('%b %d, %Y') %>, <%= @package.train_from.arr_time %></p>
          <br>
          <h2><strong>Return trip</strong></h2>
            <p><%=@package.train_to.dep_city%> <%= @package.start_date.strftime('%b %d, %Y') %>, <%= @package.train_to.dep_time %> </p>
            <p><%=@package.train_to.arr_city%> <%= @package.end_date.strftime('%b %d, %Y') %>, <%= @package.train_to.arr_time %></p>
          <h2 align="right"><%=@package.train_from.price + @package.train_to.price%>€</h2>
        </div>
      </div>
    </div>

    <div class="col-4">
      <div class="card-product">
         <%= image_tag @package.hotel.photo %>
         <div class="card-product-infos">
          <h2>
            <%= @package.hotel.name%> <%@package.hotel.stars.times do %>
              ⭐️
            <% end %>
          </h2>
          <p>From: <%=@package.start_date.strftime('%b %d, %Y') %> To:  <%=@package.end_date.strftime('%b %d, %Y') %></p>
          <p><%=@package.hotel.address %></p>
          <h2 align="right"><%=@package.hotel.price%>€</h2>
        </div>
      </div>
    </div>

    <div class="col-4">
      <div class="card-product">
        <%= image_tag @package.car.photo %>
        <div class="card-product-infos">
          <h2 style="margin-bottom: 23px"><%= @package.car.name%></h2>
            <p><%=@package.car.car_category%></p>
            <p><%=@package.car.company_name%></p>
            <p><%=@package.start_date.strftime('%b %d, %Y')%> <%=@package.end_date.strftime('%b %d, %Y') %></p>
            <p><%=@package.car.address %></p>
          <br>
          <h2 align="right"><%=@package.car.price%>€</h2>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-12 text-center">
      <%= simple_form_for [@package, @booking] do |f| %>
      <%= f.submit "Book your trip", class: "btn-lg btn-danger" %>
      <% end %>
    </div>
  </div>
</div>



