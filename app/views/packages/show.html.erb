<div class="container-fluid">
  <div class="row">
    <%= render 'shared/map'%>
  </div>
  <br>

  <div class="container">
    <div class="billboard">
      <div class="billboard-details">
        <div class="billboard-details-city">
          <span><%=@package.train_from.dep_city%></span>
          <i><%= @package.start_date.strftime('%b %d, %Y') %></i>
        </div>
        <div class="billboard-details-city">
          <span><%=@package.train_from.arr_city%></span>
          <i><%= @package.end_date.strftime('%b %d, %Y') %></i>
        </div>
      </div>

      <div class="billboard-vanities">
        <div class="billboard-vanity">
          <span> <%= (@package.end_date - @package.start_date).to_i %></span>
          <i>Night(s)</i>
        </div>
        <div class="billboard-vanity">
          <span> <%= @package.hotel.stars %></span>
          <i>Stars Hotel</i>
        </div>
         <div class="billboard-vanity">
          <span>1</span>
          <i>Rental Car</i>
        </div>
      </div>
    </div>

  </div>
</div>
<div class="cards-row">
  <%= render 'shared/train_card' %>
  <%= render 'shared/hotel_card' %>
  <%= render 'shared/car_card' %>
</div>
<br>
<div class="container">
  <div class="row">
    <div class="col-12 text-center">
      <%= simple_form_for [@package, @booking] do |f| %>
        <%= f.submit "Book your trip  |  #{@package.price} â‚¬",
            class: "btn-custom-green"
          %>
      <% end %>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-12 text-center">
      <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
          <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
        </ol>
        <div class="carousel-inner">
          <div class="carousel-item active">
            <%= image_tag @package.hotel.photo, width: "860px" %>
          </div>
          <div class="carousel-item">
            <%= image_tag @package.hotel.photo2 , width: "860px"%>
          </div>
          <div class="carousel-item">
            <%= image_tag @package.hotel.photo3 , width: "860px"%>
          </div>
            <div class="carousel-item">
            <%= image_tag @package.hotel.photo4 , width: "860px"%>
          </div>
          <div class="carousel-item">
            <%= image_tag @package.hotel.photo5 , width: "860px"%>
          </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
  </div>
</div>
