<div class="container-fluid">
  <div class="container-fluid">
    <div class="row">
      <%= render 'shared/map'%>
    </div>
  </div>
  <br>

  <div class="container">
    <div class="billboard">
      <div class="billboard-details">
        <div class="billboard-details-city">
          <span><%=@package.train_from.dep_city%></span>
          <i><%= @package.start_date.strftime('%b %d, %Y') %></i>
        </div>
        <div class="billboard-details-city">
          <span><%=@package.train_from.arr_city%></span>
          <i><%= @package.end_date.strftime('%b %d, %Y') %></i>
        </div>
      </div>

      <div class="billboard-vanities">
        <div class="billboard-vanity">
          <span> <%= (@package.end_date - @package.start_date).to_i %></span>
          <i>Night(s)</i>
        </div>
        <div class="billboard-vanity">
          <span> <%= @package.hotel.stars %></span>
          <i>Stars Hotel</i>
        </div>
         <div class="billboard-vanity">
          <span>1</span>
          <i>Rental Car</i>
        </div>
      </div>
    </div>

  </div>
</div>
<div class="cards-row">
  <%= render 'shared/train_card' %>
  <%= render 'shared/hotel_card' %>
  <%= render 'shared/car_card' %>
</div>
<br>
<div class="container">
  <div class="row">
    <div class="col-12 text-center">
      <%= simple_form_for [@package, @booking] do |f| %>
        <%= f.submit "Book your trip  |  #{@package.price} â‚¬",
            class: "btn-custom"
          %>
      <% end %>
    </div>
  </div>
</div>
