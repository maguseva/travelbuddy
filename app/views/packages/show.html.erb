<div class="container">
  <div class="container-fluid">
    <div class="row">
      <%= render 'shared/map'%>
    </div>
  </div>

  <div class="container">
    <div class="billboard">
      <div class="billboard-details">
        <div class="billboard-details-city">
          <span><%=@package.train_from.dep_city%></span>
          <i><%= @package.start_date.strftime('%b %d, %Y') %></i>
        </div>
        <div class="billboard-details-city">
          <span><%=@package.train_from.arr_city%></span>
          <i><%= @package.end_date.strftime('%b %d, %Y') %></i>
        </div>
      </div>

      <div class="billboard-vanities">
        <div class="billboard-vanity">
          <span>2</span>
          <i>night</i>
        </div>
        <div class="billboard-vanity">
          <span>1</span>
          <i>rental car</i>
        </div>
        <div class="billboard-vanity">
          <span>5</span>
          <i>stars hostel</i>
        </div>
      </div>
    </div>
    <div class="row">
      <%= render 'shared/train_card' %>
      <%= render 'shared/hotel_card' %>
      <%= render 'shared/car_card' %>

    </div>
    <div class="row">
      <div class="col-12 text-center">
        <%= simple_form_for [@package, @booking] do |f| %>
        <%= f.submit "Book your trip", class: "btn-lg btn-danger" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
