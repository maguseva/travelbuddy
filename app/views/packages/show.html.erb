<div class="container-fluid">
  <div class="container-fluid">
    <div class="row">
      <%= render 'shared/map'%>
    </div>
  </div>
  <br>

  <div class="container">
    <div class="billboard">
      <div class="billboard-details">
        <div class="billboard-details-city">
          <span><%=@package.train_from.dep_city%></span>
          <i><%= @package.start_date.strftime('%b %d, %Y') %></i>
        </div>
        <div class="billboard-details-city">
          <span><%=@package.train_from.arr_city%></span>
          <i><%= @package.end_date.strftime('%b %d, %Y') %></i>
        </div>
      </div>

      <div class="billboard-vanities">
        <div class="billboard-vanity">
          <span> <%= (@package.end_date - @package.start_date).to_i %></span>
          <i>Night(s)</i>
        </div>
        <div class="billboard-vanity">
          <span> <%= @package.hotel.stars %></span>
          <i>Stars Hotel</i>
        </div>
         <div class="billboard-vanity">
          <span>1</span>
          <i>Rental Car</i>
        </div>
      </div>
    </div>

  </div>
</div>
<div class="cards-row">
  <%= render 'shared/train_card' %>
  <%= render 'shared/hotel_card' %>
  <%= render 'shared/car_card' %>
</div>
<br>
<div class="container">
  <div class="row">
    <div class="col-12 text-center">
      <%= simple_form_for [@package, @booking] do |f| %>
        <%= f.submit "Book your trip  |  #{@package.price} â‚¬",
            class: "btn-custom"
          %>
      <% end %>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-12 text-center">
      <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
          <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
          <li data-target="#myCarousel" data-slide-to="1"></li>
          <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
          <div class="item active">
            <%= image_tag @package.hotel.photo %>
          </div>

          <div class="item">
            <img src="train_icon.png" alt="Chicago">
          </div>

          <div class="item">
            <img src="ny.jpg" alt="New York">
          </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
          <span class="glyphicon glyphicon-chevron-left"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
          <span class="glyphicon glyphicon-chevron-right"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
  </div>
</div>
